{
    "name": "join-project",
    "version": "0.3.0",
    "description": "Kanban Project Management Tool - Vanilla JS + Firebase",
    "main": "index.html",
    "type": "module",
    "scripts": {
        "docs": "jsdoc -c jsdoc.json README.md",
        "serve": "npx serve .",
        "dev": "npx serve . -p 3000",
        "docs-serve": "npm run docs && npx serve documentation",
        "clean-docs": "powershell -NoLogo -NoProfile -Command \"Remove-Item -Recurse -Force ./docs,./docs_temp -ErrorAction SilentlyContinue\"",
        "lint:css": "stylelint \"css/**/*.css\" --fix",
        "migrate:users": "node ./migration/migrateUsers.mjs"
    },
    "dependencies": {
        "firebase": "^10.7.1",
        "firebase-admin": "^12.5.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.38.0",
        "eslint": "^9.38.0",
        "globals": "^16.4.0",
        "jsdoc": "^4.0.2",
        "serve": "^14.2.1",
        "stylelint": "^16.8.0",
        "stylelint-config-standard": "^36.0.0",
        "stylelint-order": "^6.0.4"
    },
    "keywords": [
        "kanban",
        "project-management",
        "vanilla-js",
        "firebase"
    ],
    "author": "",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/FriggemannMichael/join_mpa.git"
    },
    "bugs": {
        "url": "https://github.com/FriggemannMichael/join_mpa/issues"
    },
    "homepage": "https://github.com/FriggemannMichael/join_mpa#readme"
}
